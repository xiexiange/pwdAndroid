<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00ffffff">

    <android.support.constraint.ConstraintLayout
        android:layout_width="240dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/bg_radius_8_gray">

        <TextView
            android:id="@+id/verify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需要验证密码"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/pwd_input"
            android:layout_width="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verify_title"
            android:layout_marginTop="20dp"
            android:layout_height="30dp"
            style="@style/PwdEditText"
            android:textColor="#ffffff"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/verify_confirm_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pwd_input"
            android:layout_marginTop="30dp"
            android:layout_width="160dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:background="@drawable/background_green_btn"
            android:text="完成"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>