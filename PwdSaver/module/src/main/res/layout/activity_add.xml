<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_bg"
    tools:context="com.autox.module.AddActivity"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">

    <com.autox.views.StatusBarPlaceHolderView
        android:id="@+id/status_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/add_page_navigate_wrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/translucent"
        app:layout_constraintTop_toBottomOf="@+id/status_bar">
        <RelativeLayout
            android:id="@+id/add_page_back_wrapper"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/add_page_back_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_back_white"
                android:layout_alignParentRight="true">
            </ImageView>
        </RelativeLayout>
        <TextView
            android:id="@+id/add_page_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="14sp"
            android:text="保存"
            android:textColor="#ffffff"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/add_page_title_wrapper"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/add_page_navigate_wrapper"
        android:background="@drawable/bg_radius_8_white"
        >
        <ImageView
            android:id="@+id/add_page_detail_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_work"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/add_page_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:text="工作"
            android:textSize="16sp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/icon_like_heart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_like_heart"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/add_page_platform_wrapper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_radius_8_white"
        app:layout_constraintTop_toBottomOf="@+id/add_page_title_wrapper"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/add_page_platform_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/platform_icon_alipay"/>
        <TextView
            android:id="@+id/add_page_platform_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:lines="1"
            android:ellipsize="end"
            android:text="支付宝"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#333333"/>
        <ImageView
            android:id="@+id/add_page_platform_arrow_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_right"
            android:layout_marginRight="20dp"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/add_page_msg_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_8_white"
        app:layout_constraintTop_toBottomOf="@+id/add_page_platform_wrapper"
        android:layout_marginTop="10dp">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/add_page_account_wrapper"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/add_page_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="账号"/>
            <EditText
                android:id="@+id/add_page_account_content"
                android:layout_width="200dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/add_page_account_title"
                android:layout_marginLeft="30dp"
                android:lines="1"
                android:ellipsize="end"
                android:hint="账号"
                android:textSize="14sp"
                android:background="@null"/>
            <ImageView
                android:id="@+id/add_page_clear_account"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/add_page_account_content"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_clear"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/show_clear_account"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="明文显示"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_green_btn"
                android:textColor="#ffffff"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/account_copy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_copy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/account_share"
                android:layout_marginRight="10dp"
                app:layout_goneMarginRight="20dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/account_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:visibility="gone"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/add_page_pwd_wrapper"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/add_page_account_wrapper">

            <TextView
                android:id="@+id/add_page_pwd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="密码"/>
            <EditText
                android:id="@+id/add_page_pwd_content"
                android:layout_width="200dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/add_page_pwd_title"
                android:layout_marginLeft="30dp"
                android:lines="1"
                android:ellipsize="end"
                android:hint="密码"
                android:textSize="14sp"
                android:background="@null"/>
            <ImageView
                android:id="@+id/add_page_clear_pwd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/add_page_pwd_content"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_clear"
                android:visibility="gone"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/add_page_note_wrapper"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/add_page_msg_wrapper"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_radius_8_white">
        <TextView
            android:id="@+id/add_page_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="备注"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ScrollView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/add_page_note_text"
            android:layout_marginLeft="30dp"
            android:layout_width="200dp"
            android:layout_height="100dp">

            <EditText
                android:id="@+id/add_page_note_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:hint="备注"/>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>