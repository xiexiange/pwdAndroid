<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.autox.module.MainActivity">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/separate_line"/>

    <View
        android:id="@+id/separate_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        app:layout_constraintBottom_toTopOf="@+id/tab_wrapper"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab_wrapper"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#dddddd">
        <com.autox.module.view.TabView
            android:id="@+id/tab_fenlei"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tab_add"
            app:image_selected="@drawable/tab_fenlei_white"
            app:image_default="@drawable/tab_fenlei_gray"
            app:title="分类"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>
        <com.autox.module.view.TabView
            android:id="@+id/tab_add"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tab_fenlei"
            app:layout_constraintRight_toLeftOf="@+id/tab_favor"
            app:image_default="@drawable/tab_add_gray"
            app:image_selected="@drawable/tab_add_white"
            app:title="添加"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <com.autox.module.view.TabView
            android:id="@+id/tab_favor"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tab_add"
            app:layout_constraintRight_toLeftOf="@+id/tab_me"
            app:image_default="@drawable/tab_favor_gray"
            app:image_selected="@drawable/tab_favor_white"
            app:title="收藏"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <com.autox.module.view.TabView
            android:id="@+id/tab_me"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tab_favor"
            app:layout_constraintRight_toRightOf="parent"
            app:image_default="@drawable/tab_my_gray"
            app:image_selected="@drawable/tab_my_white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            app:title="设置"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>