<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_bg"
    tools:context="com.autox.module.AddActivity">

    <com.autox.views.StatusBarPlaceHolderView
        android:id="@+id/status_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/list_page_navigate_wrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/translucent"
        app:layout_constraintTop_toBottomOf="@+id/status_bar">
        <RelativeLayout
            android:id="@+id/list_page_back_wrapper"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/list_page_back_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_back_white"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true">
            </ImageView>
        </RelativeLayout>
        <TextView
            android:id="@+id/list_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="其它"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/list_page_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:text="编辑"
            android:textColor="#ffffff"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_rv_wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_page_navigate_wrapper">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>