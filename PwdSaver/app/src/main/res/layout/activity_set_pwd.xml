<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/frame_bg">
    <com.autox.password.views.statusbar.StatusBarPlaceHolderView
        android:id="@+id/status_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/title_wrapper"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/status_bar">
        <ImageView
            android:id="@+id/pwd_set_back_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码"
            android:textColor="#333333"
            android:textSize="16sp"
            />

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="160dp">
        <TextView
            android:id="@+id/welcome_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="13sp"
            android:text="欢迎, "/>
        <TextView
            android:id="@+id/set_pwd_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/welcome_text"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:textSize="15sp"
            android:text="密码设置"
            android:textColor="#333333"/>
        <EditText
            android:id="@+id/first_pwd_input"
            app:layout_constraintTop_toBottomOf="@+id/set_pwd_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="输入密码"
            style="@style/PwdEditText"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:paddingLeft="8dp"
            android:textSize="12sp"/>
        <EditText
            android:id="@+id/confirm_pwd_input"
            app:layout_constraintTop_toBottomOf="@+id/first_pwd_input"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="再次输入密码"
            style="@style/PwdEditText"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:paddingLeft="8dp"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/pwd_confirm_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirm_pwd_input"
            android:layout_marginTop="30dp"
            android:layout_width="160dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:background="@drawable/background_green_btn"
            android:text="完成"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>