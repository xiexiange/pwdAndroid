<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppWelcome" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launcher_page</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PwdEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/background_pwd_input</item>
    </style>

</resources>
